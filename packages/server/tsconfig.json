{
  "compilerOptions": {
    "target": "ES2020",
    "outDir": "./dist",
    "useDefineForClassFields": true,
    "module": "NodeNext",
    "lib": [
      "ES2020"
    ],
    "skipLibCheck": true,
    "moduleResolution": "NodeNext",
    "resolveJsonModule": true,
    /* Linting */
    "strict": true,
    "strictNullChecks": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "src/**/*"
  ]
}