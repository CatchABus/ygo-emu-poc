{
    "compilerOptions": {
      "target": "ES2020",
      "useDefineForClassFields": true,
      "module": "NodeNext",
      "lib": ["ES2020"],
      "skipLibCheck": true,
      "moduleResolution": "NodeNext",
      "allowImportingTsExtensions": true,
      "resolveJsonModule": true,
      "noEmit": true,
  
      /* Linting */
      "strict": true,
      "strictNullChecks": false,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "noFallthroughCasesInSwitch": true
    },
    "include": ["src/**/*"]
  }
  